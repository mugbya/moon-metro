icon-size = 32px
icon-gap = 25px

article

  a:hover
    color #000

  font-weight 300
  &.page
    padding-left 20px
    .icon
      display none

  &.post
    .icon
      &:before
        content '\f15c'
        //content '\f016'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content
    margin-bottom 50px
    position relative

  .post-content-index
    padding 0 20px 0 (icon-size + icon-gap + 20)
    margin-bottom 15px
    position relative
    @media screen and (max-width: 768px)
      padding-left 20px
      margin-bottom 20px
    header
      margin-bottom 20px
      @media screen and (max-width: 768px)
        margin-bottom 15px
      .icon
        width icon-size
        height icon-size
        margin-right icon-gap
        position absolute
        top 10px
        left 20px
        color color-link
        @media screen and (max-width: 768px)
          display none
        &:before
          position absolute
          font 30px font-icon
          top 0
          left 0
          width 32px
          text-align center

      .title
        font-size px
        font-weight 300
        display inline
        a
          color color-link
          &:hover
            color #000
            text-decoration none

      time
        font-size 1.5em
        font-weight 300
        display inline-block
        a
          color color-link
          &:hover
            color #000
            text-decoration none
      ul
        margin-top 3px
        list-style none
        li
          margin-right 15px
          display inline
          @media screen and (max-width: 768px)
            display block
            font-size 0.8em
            line-height 22px
          .heading-span
            color #444
            font-weight 400

          a
            text-decoration underline
            color #009CDC
            &:hover
              color #000

  .gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  .entry
    text-align justify
    line-height 1.5
    letter-spacing 0.01rem

    p
      word-wrap break-word
      margin 5px 0
      font-size 0.8em

    blockquote
      /*border-top 1px solid color-border*/
      /*border-bottom 1px solid color-border*/
      border-left: 10px solid #ddd;
      font-style italic
      font-family font-serif
      font-size 1.2em
      padding 1px 0px 1px 20px
      text-align left
      background-color: rgba(128,128,128,0.05);
      border-top-right-radius: 5px;
      border-bottom-right-radius: 5px;
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    code, pre
      font-family font-mono

    code
      background #eee
      color #666
      padding 0 5px
      margin 0 2px
      font-size 0.9em
      border 1px solid color-border
      border-radius 3px

    pre
      background #eee
      border 1px solid color-border
      margin-top 15px
      margin-bottom  15px
      overflow auto
      padding 7px 15px
      border-radius 2px
      code
        background none
        padding 0
        margin 0
        border none
        border-radius 0

    ul, ol, dl
      //margin-left 20px 0
      padding-top 20px
      padding-left 40px
      ul, ol, dl
        margin-top 0

    ul li p
      margin-top 0

    hr
      margin 20px auto

      margin-top: 21px;
      margin-bottom 21px;
      border 0
      border-top 1px solid #eee;

      border-top 2px dotted #eee
      display block
      box-sizing content-box
      height 0

    h1
      padding 6px 8px
      background #f3f3f3
      border-radius 4px
      -moz-border-radius 4px
      -webkit-border-radius 4px

    h2
      font-weight normal
      border-bottom 1px solid color-border
      padding-bottom 10px
      margin-top 20px

    h3, h4, h5, h6
      font-weight normal

    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .caption
      display block
      margin-top 5px
      color color-meta
      position relative
      font-size 0.9em
      padding-left 25px
      &:before
        content '\f040'
        position absolute
        font 1.3em font-icon
        position relative
        /*left 0*/
        top 3px

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em

  footer
    padding-bottom 30px
    margin-bottom 40px
    border-bottom 2px solid #eee
    margin-top 25px
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px
    @media screen and (max-width: 768px)
      margin-bottom 20px
      padding-bottom 30px

    .share
      margin-top 30px

    .alignright
      .more-link
        font-style italic
        font-weight 600
        color color-link
        &:hover
          color #000
          text-decoration none
        i
            margin-left 5px
    .categories, .tags
      position relative
      padding-left 25px
      margin 5px 0
      &:before
        position absolute
        font 1.1em font-icon
      a
        color color-meta
        &:hover
          color color-link
          text-decoration none
        &:before
          font 1.1em font-icon
          padding-right 10px
          vertical-align middle

      &.comment-link
        &:before
          content '\f075'

    .categories
      &:before
        content '\f07b'
        top 2px
        left 1px

    .tags
      &:before
        content '\f02b'
        top 3px
        left 2px

    .article-nav
      margin-top 10px
      border-top 1px solid #eee
      padding-top 15px
      .article-prev, .article-next
        float left
        width 48%
        color #009CDC
        font-weight normal
        a:hover
          color #000
          text-decoration none
      .article-next
        text-align right
        float right




